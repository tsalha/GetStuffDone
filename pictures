  <script>
    // Adjust if you have different extensions
    const imageCount = 10; // how many pics you expect
    const gallery = document.getElementById("gallery");
  
    for (let i = 1; i <= imageCount; i++) {
      let img = document.createElement("img");
      img.src = `pics/photo${i}.jpg`; // expects photo1.jpg, photo2.jpg, etc.
      img.alt = `Photo ${i}`;
      gallery.appendChild(img);
    }
  </script>

